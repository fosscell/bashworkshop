
array=(`ls`)
len=${#array[*]}
echo "The array has $len items and the c files in are:"
k=1
i=0
while [ $i -lt $len ]; do
            if [[ $i =~ *."$1" ]]
            then 
            echo "$k: ${array[$i]}"
            let k++
            fi
            let i++
            done
echo -e "\nThere are $k files with the extension $1"

array=(`ls`)
